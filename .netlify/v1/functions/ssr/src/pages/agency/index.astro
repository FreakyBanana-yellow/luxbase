---
// src/pages/agency/index.astro
export const prerender = false;

import BaseLayout from '../../layouts/BaseLayout.astro';
import CreateAgencyButton from '../../components/CreateAgencyButton.jsx';
import { getMyAgencies } from '../../lib/agency';

const agencies = await getMyAgencies();
---

<BaseLayout title="Agenturen">
  <section class="max-w-5xl mx-auto px-4 py-10 space-y-6">
    <header class="flex items-center justify-between">
      <h1 class="text-2xl font-semibold text-yellow-200">Deine Agenturen</h1>
      <CreateAgencyButton client:load />
    </header>

    {agencies.length === 0 && (
      <div class="p-6 rounded-2xl bg-zinc-950/60 border border-yellow-600/20 text-zinc-200">
        Noch keine Agentur. Lege die erste an.
      </div>
    )}

    {agencies.length > 0 && (
      <ul class="grid gap-3">
        {agencies.map((a) => (
          <li class="p-4 rounded-2xl bg-zinc-950/60 border border-yellow-600/20 flex items-center justify-between">
            <div>
              <div class="text-yellow-100 font-medium">{a.name}</div>
              <div class="text-xs text-zinc-400">Rolle: {a.role}</div>
            </div>
            <div class="flex gap-2">
              <a href={`/agency/${a.id}/models`}
                 class="px-3 py-2 rounded-xl bg-zinc-800 hover:bg-zinc-700 border border-zinc-600 text-zinc-100 text-sm">
                Models
              </a>
              <a href={`/agency/join?agency=${encodeURIComponent(a.id)}`}
                 class="px-3 py-2 rounded-xl bg-zinc-800 hover:bg-zinc-700 border border-zinc-600 text-zinc-100 text-sm">
                Invite-Link
              </a>
            </div>
          </li>
        ))}
      </ul>
    )}
  </section>
</BaseLayout>
