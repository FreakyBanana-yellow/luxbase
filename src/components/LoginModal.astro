<div id="loginModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
  <div class="bg-white rounded-xl p-6 w-full max-w-md relative">
    <button id="closeModal" class="absolute top-2 right-3 text-gray-500 text-xl">&times;</button>
    <h2 class="text-xl font-bold mb-4">Login</h2>
    <form class="space-y-4">
      <input type="email" placeholder="E-Mail" class="w-full border p-2 rounded" />
      <input type="password" placeholder="Passwort" class="w-full border p-2 rounded" />
      <button type="submit" class="w-full py-2 bg-indigo-600 text-white rounded">Einloggen</button>
    </form>
  </div>
</div>

<script>
  const openBtn = document.getElementById('loginBtn');
  const closeBtn = document.getElementById('closeModal');
  const modal = document.getElementById('loginModal');

  openBtn?.addEventListener('click', () => modal?.classList.remove('hidden'));
  closeBtn?.addEventListener('click', () => modal?.classList.add('hidden'));
</script>
