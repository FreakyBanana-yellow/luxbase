---
import "../styles/global.css";
---
<html lang="de" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Luxbase</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet" />
    <meta name="theme-color" content="#0d0d0d" />
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <script>
      window.supabase = supabase.createClient(
        import.meta.env.PUBLIC_SUPABASE_URL,
        import.meta.env.PUBLIC_SUPABASE_ANON_KEY
      );
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-luxblack text-white font-sans">
    <!-- Header -->
    <header class="sticky top-0 z-50 flex items-center justify-between px-6 py-4 bg-black/70 backdrop-blur shadow-md">
      <h1 class="text-2xl md:text-3xl font-serif font-bold text-luxgold">Luxbase</h1>
      <button id="openLogin" class="text-sm px-4 py-2 border border-luxgold text-luxgold rounded hover:bg-luxgold hover:text-luxblack transition">Login</button>
    </header>

    <!-- Login / Register Modal -->
    <div id="loginModal" class="fixed inset-0 bg-black/70 hidden flex items-center justify-center z-50">
      <div class="bg-luxgray p-8 rounded-2xl shadow-xl w-full max-w-md relative text-white">
        <button id="closeLogin" class="absolute top-4 right-4 text-white text-xl">&times;</button>

        <!-- Login Box -->
        <div id="loginBox" class="flex flex-col gap-4">
          <h2 class="text-2xl font-serif text-luxgold text-center mb-2">Login</h2>
          <input id="loginEmail" type="email" placeholder="E-Mail" class="w-full px-4 py-3 rounded bg-black border border-gray-600" />
          <div class="relative">
            <input id="loginPassword" type="password" placeholder="Passwort" class="w-full px-4 py-3 pr-10 rounded bg-black border border-gray-600" />
            <button type="button" id="toggleLoginPw" class="absolute inset-y-0 right-2 text-gray-400 hover:text-white">üëÅÔ∏è</button>
          </div>
          <button id="btnLogin" class="w-full bg-luxgold text-luxblack font-semibold py-3 rounded hover:bg-yellow-400 transition">Einloggen</button>
          <p id="loginMsg" class="text-red-400 text-sm min-h-[1rem]"></p>
          <p class="text-sm text-center">Noch kein Konto? <a id="linkToRegister" class="text-yellow-400 hover:underline cursor-pointer">Registrieren</a></p>
          <p class="text-sm text-center"><a id="linkToReset" class="text-yellow-400 hover:underline cursor-pointer">Passwort vergessen?</a></p>
        </div>

        <!-- Register Box -->
        <div id="registerBox" class="hidden flex flex-col gap-4">
          <h2 class="text-2xl font-serif text-luxgold text-center mb-2">Registrieren</h2>
          <input id="signupName" type="text" placeholder="Name" class="w-full px-4 py-3 rounded bg-black border border-gray-600" />
          <select id="signupRole" class="w-full px-4 py-3 rounded bg-black border border-gray-600 text-white">
            <option value="creator">Creator / Model</option>
            <option value="agentur">Agentur</option>
          </select>
          <input id="signupEmail" type="email" placeholder="E-Mail" class="w-full px-4 py-3 rounded bg-black border border-gray-600" />
          <div class="relative">
            <input id="signupPassword" type="password" placeholder="Passwort" class="w-full px-4 py-3 pr-10 rounded bg-black border border-gray-600" />
            <button type="button" id="toggleSignupPw" class="absolute inset-y-0 right-2 text-gray-400 hover:text-white">üëÅÔ∏è</button>
          </div>
          <div id="pwHints" class="text-sm text-gray-400 space-y-1"></div>
          <input id="signupConfirm" type="password" placeholder="Passwort best√§tigen" class="w-full px-4 py-3 rounded bg-black border border-gray-600" />
          <button id="btnSignup" class="w-full bg-luxgold text-luxblack font-semibold py-3 rounded hover:bg-yellow-400 transition">Registrieren</button>
          <p id="signupMsg" class="text-red-400 text-sm min-h-[1rem]"></p>
          <p class="text-sm text-center">Bereits registriert? <a id="linkToLogin" class="text-yellow-400 hover:underline cursor-pointer">Login</a></p>
        </div>

        <!-- Reset Box -->
        <div id="resetBox" class="hidden flex flex-col gap-4">
          <h2 class="text-2xl font-serif text-luxgold text-center mb-2">Passwort zur√ºcksetzen</h2>
          <input id="resetEmail" type="email" placeholder="E-Mail" class="w-full px-4 py-3 rounded bg-black border border-gray-600" />
          <button id="btnReset" class="w-full bg-luxgold text-luxblack font-semibold py-3 rounded hover:bg-yellow-400 transition">Link senden</button>
          <p id="resetMsg" class="text-yellow-400 text-sm min-h-[1rem]"></p>
          <p class="text-sm text-center"><a id="backToLogin" class="text-yellow-400 hover:underline cursor-pointer">Zur√ºck zum Login</a></p>
        </div>
      </div>
    </div>

    <main class="flex-1"><slot /></main>

    <footer class="text-center text-sm text-luxgold/70 py-8 border-t border-luxgray">¬© {new Date().getFullYear()} Luxbase ‚Äì Automation with Style.</footer>

    <script>
      const $ = (id) => document.getElementById(id);
      const modal = $('loginModal');
      const show = (id) => {
        ['loginBox','registerBox','resetBox'].forEach(b => $(b).classList.add('hidden'));
        $(id).classList.remove('hidden');
      };
      $('openLogin').onclick = () => { modal.classList.remove('hidden'); show('loginBox'); };
      $('closeLogin').onclick = () => modal.classList.add('hidden');
      modal.onclick = (e) => { if (e.target === modal) modal.classList.add('hidden'); };
      $('linkToRegister').onclick = () => show('registerBox');
      $('linkToLogin').onclick = () => show('loginBox');
      $('linkToReset').onclick = () => show('resetBox');
      $('backToLogin').onclick = () => show('loginBox');
      const togglePw = (id) => { const el=$(id); el.type = el.type==='password'?'text':'password'; };
      $('toggleLoginPw').onclick = () => togglePw('loginPassword');
      $('toggleSignupPw').onclick = () => togglePw('signupPassword');
      $('signupPassword').addEventListener('input', e => {
        const v=e.target.value;
        const rules=[
          {t:'Mindestens 8 Zeichen',ok:v.length>=8},
          {t:'Mind. ein Gro√übuchstabe',ok:/[A-Z]/.test(v)},
          {t:'Mind. eine Zahl',ok:/\d/.test(v)},
          {t:'Mind. ein Sonderzeichen',ok:/[^A-Za-z0-9]/.test(v)}];
        $('pwHints').innerHTML=rules.map(r=>`<p class="${r.ok?'text-green-400':'text-gray-400'}">‚Ä¢ ${r.t}</p>`).join('');
      });
      $('btnLogin').onclick = async () => {
        const { error } = await supabase.auth.signInWithPassword({
          email: $('loginEmail').value.trim(),
          password: $('loginPassword').value
        });
        $('loginMsg').textContent = error ? error.message : '';
        if (!error) window.location.href = '/dashboard';
      };
    </script>
  </body>
</html>
