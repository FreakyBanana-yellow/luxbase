---
// src/pages/app/profile.astro
import Layout from '../../layouts/BaseLayout.astro';
import ProfileForm from '../../components/ProfileForm.jsx';
import { supabase } from '../../lib/supabaseClient';


// Optional: Server-side Session lesen (Astro Endpoint Context)
const { data: { session } } = await supabase.auth.getSession();
const token = session?.access_token || '';
---


<Layout title="Profil – Luxbase">
<section class="max-w-5xl mx-auto px-4 py-10">
<h1 class="text-2xl md:text-3xl font-semibold text-yellow-400">Dein Profil</h1>
<p class="mt-2 text-zinc-300">Verwalte hier deine Daten für den VIP-Bot & mehr.</p>


<div class="mt-8 p-6 rounded-2xl bg-zinc-950/60 border border-yellow-600/20 shadow-xl">
<ProfileForm client:load token={token} />
</div>
</section>
</Layout>