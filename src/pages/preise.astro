---
import Layout from "../layouts/BaseLayout.astro";
---

<Layout>
  <section class="max-w-6xl mx-auto py-24 px-6 text-center">
    <h1 class="text-5xl font-serif font-bold text-luxgold mb-12">Unsere Preise</h1>

    <!-- VIP-Bot -->
    <div class="mb-20">
      <h2 class="text-3xl font-bold mb-4">VIP-Bot</h2>
      <p class="text-lg mb-2">49 €/Monat</p>
      <p class="text-sm text-luxgold/80">Optional: Persönliche Einrichtung für 159 € (einmalig)</p>
    </div>

    <!-- VaultRoom -->
    <div class="mb-20">
      <h2 class="text-3xl font-bold mb-4">VaultRoom</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="border border-luxgray rounded-lg p-6">
          <h3 class="text-xl font-semibold mb-2">Basis</h3>
          <p class="mb-2">Mehr Speicher</p>
          <p class="text-lg font-bold">49 €/Monat</p>
        </div>
        <div class="border border-luxgray rounded-lg p-6">
          <h3 class="text-xl font-semibold mb-2">Instagram-Check</h3>
          <p class="mb-2">Zusätzlich: Analyse der Bilder</p>
          <p class="text-lg font-bold">59 €/Monat</p>
        </div>
        <div class="border border-luxgray rounded-lg p-6">
          <h3 class="text-xl font-semibold mb-2">Mit KI-Vorschlägen</h3>
          <p class="mb-2">Zusätzlich: KI-gestützte Empfehlungen basierend auf Performance</p>
          <p class="text-lg font-bold">99 €/Monat</p>
        </div>
      </div>
      <p class="text-sm text-luxgold/80 mt-4">Einmalige Einrichtung: 259 €</p>
    </div>

    <!-- StageOne -->
    <div class="mb-20">
      <h2 class="text-3xl font-bold mb-4">StageOne – Multi-Posting</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="border border-luxgray rounded-lg p-6">
          <h3 class="text-xl font-semibold mb-2">Basic</h3>
          <p class="mb-2">10 Postings pro Monat</p>
          <p class="text-lg font-bold">19 €/Monat</p>
        </div>
        <div class="border border-luxgray rounded-lg p-6">
          <h3 class="text-xl font-semibold mb-2">Growth</h3>
          <p class="mb-2">27 Postings pro Monat</p>
          <p class="text-lg font-bold">39 €/Monat</p>
        </div>
        <div class="border border-luxgray rounded-lg p-6">
          <h3 class="text-xl font-semibold mb-2">Pro</h3>
          <p class="mb-2">40 Postings pro Monat</p>
          <p class="text-lg font-bold">59 €/Monat</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
