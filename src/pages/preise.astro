---
import Layout from "../layouts/BaseLayout.astro";
---

<Layout>
  <section class="max-w-6xl mx-auto py-24 px-6 text-center">
    <h1 class="text-5xl font-serif font-bold text-luxgold mb-16">Unsere Preise</h1>

    <!-- VIP-Bot -->
    <div class="mb-24">
      <div class="bg-luxgray/10 rounded-xl p-8 shadow-md">
        <h2 class="text-3xl font-bold mb-4 text-luxgold">VIP-Bot</h2>
        <p class="text-lg mb-2">49 €/Monat</p>
        <p class="text-sm text-luxgold/80">Optional: Persönliche Einrichtung für 159 € (einmalig)</p>
      </div>
    </div>

    <!-- VaultRoom -->
    <div class="mb-24">
      <h2 class="text-3xl font-bold mb-10 text-luxgold">VaultRoom</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-luxgray/10 rounded-xl p-6 shadow-md">
          <h3 class="text-xl font-semibold mb-2 text-luxgold">Basis</h3>
          <p class="mb-2">Mehr Speicher</p>
          <p class="text-lg font-bold">49 €/Monat</p>
        </div>
        <div class="bg-luxgray/10 rounded-xl p-6 shadow-md">
          <h3 class="text-xl font-semibold mb-2 text-luxgold">Instagram-Check</h3>
          <p class="mb-2">Zusätzlich: Analyse der Bilder</p>
          <p class="text-lg font-bold">59 €/Monat</p>
        </div>
        <div class="bg-luxgray/10 rounded-xl p-6 shadow-md">
          <h3 class="text-xl font-semibold mb-2 text-luxgold">Mit KI-Vorschlägen</h3>
          <p class="mb-2">Zusätzlich: KI-gestützte Empfehlungen basierend auf Performance</p>
          <p class="text-lg font-bold">99 €/Monat</p>
        </div>
      </div>
      <p class="text-sm text-luxgold/80 mt-6">Einmalige Einrichtung: 259 €</p>
    </div>

    <!-- StageOne -->
    <div>
      <h2 class="text-3xl font-bold mb-10 text-luxgold">StageOne – Multi-Posting</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-luxgray/10 rounded-xl p-6 shadow-md">
          <h3 class="text-xl font-semibold mb-2 text-luxgold">Basic</h3>
          <p class="mb-2">10 Postings pro Monat</p>
          <p class="text-lg font-bold">19 €/Monat</p>
        </div>
        <div class="bg-luxgray/10 rounded-xl p-6 shadow-md">
          <h3 class="text-xl font-semibold mb-2 text-luxgold">Growth</h3>
          <p class="mb-2">27 Postings pro Monat</p>
          <p class="text-lg font-bold">39 €/Monat</p>
        </div>
        <div class="bg-luxgray/10 rounded-xl p-6 shadow-md">
          <h3 class="text-xl font-semibold mb-2 text-luxgold">Pro</h3>
          <p class="mb-2">40 Postings pro Monat</p>
          <p class="text-lg font-bold">59 €/Monat</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
